# Production Environment Configuration
# Copy to .env and configure for your environment

# Database Configuration
DATABASE_URL=sqlite:///./production.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/domus_production

# Stripe Configuration (Get from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Authentication & Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Email Configuration (for notifications and onboarding)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=hello@domusplanning.co.uk
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_NAME=Domus Planning Platform

# Application Configuration
APP_NAME=Domus Planning Platform
APP_VERSION=4.0.0-production
APP_DOMAIN=domus-conveyancing.onrender.com
APP_URL=https://domus-conveyancing.onrender.com

# External API Keys
OS_MAPS_API_KEY=your-ordnance-survey-api-key
PLANNING_PORTAL_API_KEY=your-planning-portal-api-key

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Background Tasks
ENABLE_BACKGROUND_TASKS=true
HEALTH_CHECK_INTERVAL=300

# Admin Configuration
ADMIN_EMAIL=admin@domusplanning.co.uk
SUPPORT_EMAIL=support@domusplanning.co.uk

# Feature Flags
ENABLE_BNG_MARKETPLACE=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_AI_ANALYSIS=true
ENABLE_WEBHOOK_PROCESSING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_UPLOAD=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily

# Development vs Production
ENVIRONMENT=production
DEBUG=false