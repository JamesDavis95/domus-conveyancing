# --- Core ---
APP_NAME=Domus Conveyancing API
SECRET_KEY=dev-secret
ENV=dev

# --- DB ---
DATABASE_URL=postgresql+psycopg2://postgres:dev@postgres:5432/postgres

# --- Redis (RQ) ---
REDIS_URL=redis://redis:6379/0
USE_JOBS=true

# --- Storage (MinIO/S3) ---
S3_ENDPOINT_URL=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=domus
S3_PATH_STYLE=true

# --- ClamAV ---
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
AV_SCAN=true

# --- Auth (optional â€“ leave blank to disable) ---
AUTH_ENABLED=false
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_AUTHORITY=https://login.microsoftonline.com/<tenant-id>/v2.0
OIDC_SCOPE=openid email profile
OIDC_REDIRECT_PATH=/auth/callback
