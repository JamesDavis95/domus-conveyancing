# Dev DB (SQLite file)
DATABASE_URL=sqlite:///./dev.db
AUTH_ENABLED=false
EXPECTED_API_KEY=demo-key

# Uploads (local default)
DATA_DIR=./data/uploads
MAX_UPLOAD_MB=25

# S3 / MinIO (optional)
S3_BUCKET=
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1
S3_SECURE=false

# ClamAV (optional)
CLAMAV_ENABLED=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Logging
LOG_LEVEL=INFO

# Background jobs (optional)
REDIS_URL=redis://localhost:6379/0
OCR_ENABLED=true

# OIDC (optional)
OIDC_ENABLED=false
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
# If not set, callback defaults to http(s)://host/auth/callback
OIDC_REDIRECT_URI=
OIDC_SCOPES=openid profile email
OIDC_ROLES_ALLOW=officer,admin

# Cookies
SECRET_KEY=change-me
